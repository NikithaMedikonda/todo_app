<% if flash[:alert] %>
  <div class="alert alert-warning">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if task.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h4>
    <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: task, local: true, class: "p-4 border rounded") do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :due_date, class: "form-label" %>
    <%= form.date_field :due_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, options_for_select([["Pending", "pending"], ["Completed", "completed"]], selected: task.status), {}, class: "form-select" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
