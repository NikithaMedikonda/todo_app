<h2 class="text-center">Task Details</h2>
<div class="container d-flex justify-content-center">
  <div class="card p-4 mt-4 shadow-sm" style="width: 600px;">
    <h3><%= @task.title %></h3>
    <p><%= @task.description %></p>
    <p>Status: <strong><%= @task.status.capitalize %></strong></p>
    <p>Due: <%= @task.due_date.strftime('%B %d, %Y') %></p>
    <div class="mt-3">
      <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-outline-primary btn-sm' %>
      <%= link_to 'Back to List', tasks_path, class: 'btn btn-secondary btn-sm' %>
      <%= button_to 'Destroy', @task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
    </div>
  </div>
</div>